<h4>My Featured Products</h4>
<div class="row">
    <% for( let index = 0; index <product.length; index++ ) { %>
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="/images/pic1.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= product[index].title %></h5>
                    <p class="card-text"><%=product[index].description %></p>
                    
                    <a href="/add-to-cart/<%= product[index]._id %>" class="btn btn-primary">PKR: <%=product[index].price %> Add To Cart</a>
                </div>
            </div>
        </div>
    <% } %>
</div>
<div>
    Page <%= page %> of <%= totalPages %>
</div>
<nav aria-label="Page navigation example">
   <ul class="pagination">
       <li class="page-item <%= page==1? "disabled":"" %>"><a class="page-link" href="/admin/availableProducts/<%= Number(page)-1 %>">Previous</a></li>
       <% for( let index = 1; index <= totalPages; index++ ) { %>
       <li class="page-item"><a class="page-link" href="/admin/availableProducts/<%= index %>"><%= index %></a></li>
     <% } %>

     <li class="page-item <%= page==totalPages?"disabled":"" %> "><a class="page-link" href="/admin/availableProducts/<%= Number(page)+1 %>">Next</a></li>
   </ul>
 </nav>